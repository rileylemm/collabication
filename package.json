{
  "name": "collabication",
  "version": "0.1.0",
  "description": "An agent-native collaboration platform that integrates humans and AI agents for knowledge work",
  "main": "frontend/electron/main.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "cross-env BROWSER=none react-scripts start",
    "dev:electron": "wait-on http://localhost:3000 && electron-forge start",
    "build": "react-scripts build && electron-forge package",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test": "react-scripts test"
  },
  "keywords": [
    "electron",
    "react",
    "collaboration",
    "ai",
    "agent",
    "document-editor"
  ],
  "author": "Collabication Team",
  "license": "MIT",
  "dependencies": {
    "@codemirror/lang-javascript": "^6.1.9",
    "@codemirror/lang-python": "^6.1.3",
    "@tiptap/extension-code-block-lowlight": "^2.0.0-beta.220",
    "@tiptap/react": "^2.0.0-beta.220",
    "@tiptap/starter-kit": "^2.0.0-beta.220",
    "codemirror": "^6.0.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "isomorphic-git": "^1.21.0",
    "jose": "^4.14.4",
    "marked": "^5.0.4",
    "mongodb": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.13.0",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.7.0",
    "styled-components": "^6.0.0-rc.3",
    "y-websocket": "^1.5.0",
    "yjs": "^13.6.4"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.2.1",
    "@electron-forge/maker-deb": "^6.2.1",
    "@electron-forge/maker-rpm": "^6.2.1",
    "@electron-forge/maker-squirrel": "^6.2.1",
    "@electron-forge/maker-zip": "^6.2.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.6",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^25.1.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.8.8",
    "react-scripts": "5.0.1",
    "typescript": "^5.1.3",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  }
}
